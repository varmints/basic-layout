---
interface Props {
  label: string;
  name: string;
  id?: string;
  required?: boolean;
  checked?: boolean;
}

const {
  label,
  name,
  id = name,
  required = false,
  checked = false,
} = Astro.props;
---

<div class="checkbox-wrapper">
  <label class="checkbox-container">
    <input
      type="checkbox"
      id={id}
      name={name}
      required={required}
      checked={checked}
    />
    <span class="checkbox-visual-wrapper">
      <span class="checkbox-custom">
        <svg class="checkbox-icon" viewBox="0 0 16 16">
          <path d="M5.75 11.75L2.25 8l1.5-1.5 2 2.25 5.5-6.5 1.5 1.25-7 7.5z"
          ></path>
        </svg>
      </span>
    </span>
    <span class="checkbox-label">{label}</span>
  </label>
</div>

<style>
  .checkbox-wrapper {
    width: 100%;
    margin-bottom: 0.5rem;
  }

  .checkbox-container {
    display: flex;
    align-items: flex-start;
    cursor: pointer;
  }

  .checkbox-container input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    width: 0;
    height: 0;
  }

  .checkbox-visual-wrapper {
    position: relative;
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-right: 0.75rem;
    margin-top: 0.25rem;
  }

  .checkbox-visual-wrapper::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 34px;
    height: 34px;
    background-color: transparent;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: background-color 0.2s ease;
  }

  .checkbox-container:hover .checkbox-visual-wrapper::before {
    background-color: var(--primary-color-100);
  }

  .checkbox-container:active .checkbox-visual-wrapper::before {
    background-color: var(--primary-color-200);
  }

  .checkbox-custom {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    border: 1px solid var(--gray-color-300);
    border-radius: 3px;
    background-color:  var(--white-color);
    box-sizing: border-box;
    z-index: 1;
    transition: border-color 0.2s ease;
  }

  .checkbox-icon {
    width: 16px;
    height: 16px;
    fill:  var(--white-color);
    visibility: hidden;
  }

  .checkbox-container
    input[type="checkbox"]:checked
    + .checkbox-visual-wrapper
    .checkbox-custom {
    background-color: var(--primary-color-600);
    border-color: var(--primary-color-600);
  }

  .checkbox-container
    input[type="checkbox"]:checked
    + .checkbox-visual-wrapper
    .checkbox-custom
    .checkbox-icon {
    visibility: visible;
  }

  .checkbox-label {
    font-size: 14px;
    line-height: 1.5;
    color: var(--gray-color-700);
  }
</style>
