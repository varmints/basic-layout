---
interface Props {
  label: string;
  name: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  value?: string;
  errorMessage?: string;
}

const {
  label,
  name,
  id = name,
  placeholder = "",
  required = false,
  rows = 5,
  value = "",
  errorMessage = "To pole jest wymagane",
} = Astro.props;

---

<div class="form-field">
  <div class="textarea-container">
    <textarea
      id={id}
      name={name}
      class="text-area"
      placeholder=" "
      required={required}
      rows={rows}
    >{value}</textarea>
    <label for={id} class="textarea-label">{label}</label>
  </div>
  <div class="error-message" style="color: var(--red-color-900);">{errorMessage}</div>
</div>

<style>
  .form-field {
    position: relative;
    width: 100%;
    margin-bottom: 16px;
  }

  .textarea-container {
    position: relative;
    width: 100%;
  }

  .text-area {
    width: 100%;
    min-height: 120px;
    padding: 16px;
    font-size: 16px;
    font-family: inherit;
    border: 1px solid var(--gray-color-100);
    border-radius: 4px;
    background-color:  var(--white-color);
    transition: all 0.2s ease;
    outline: none;
    resize: vertical;
  }

  .text-area:hover {
    border-color: var(--gray-color-300);
  }

  .textarea-label {
    position: absolute;
    left: 16px;
    top: 16px;
    font-size: 16px;
    color: var(--gray-color-700);
    pointer-events: none;
    transition: all 0.2s ease;
    padding: 0 4px;
  }

  .text-area:focus ~ .textarea-label,
  .text-area:not(:placeholder-shown) ~ .textarea-label {
    top: 0;
    font-size: 12px;
    background-color:  var(--white-color);
    color: var(--primary-color-600);
    transform: translateY(-50%);
  }

  .text-area:hover:not(:focus):not(:invalid) {
    border-color: var(--gray-color-500);
  }

  .text-area:focus {
    border: 1px solid var(--primary-color-500);
    padding: 15px;
  }

  .text-area:focus ~ .textarea-label {
    color: var(--grey-color-900);
  }

  .text-area:invalid:not(:focus):not(:placeholder-shown) {
    border: 1px solid var(--red-color-900);
  }

  .error-message {
    font-size: 12px;
    margin-top: 4px;
    display: none;
  }

</style>
