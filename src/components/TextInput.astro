---
interface Props {
  label: string;
  name: string;
  id?: string;
  type?: "text" | "email" | "tel" | "password" | "number";
  placeholder?: string;
  required?: boolean;
  value?: string;
  errorMessage?: string;
}

const {
  label,
  name,
  id = name,
  type = "text",
  placeholder = "",
  required = false,
  value = "",
  errorMessage = type === "email"
    ? "Wpisz poprawny adres email"
    : "To pole jest wymagane",
} = Astro.props;

const hasValue = value !== "";
---

<div class="form-field">
  <div class="input-container">
    <input
      type={type}
      id={id}
      name={name}
      class="text-input"
      placeholder=" "
      required={required}
      value={value}
    />
    <label for={id} class="input-label">{label}</label>
  </div>
  {required && <div class="error-message">{errorMessage}</div>}
</div>

<style>
  .form-field {
    position: relative;
    width: 100%;
    margin-bottom: 16px;
  }

  .input-container {
    position: relative;
    width: 100%;
  }

  .text-input {
    width: 100%;
    height: 56px;
    padding: 16px;
    font-size: 16px;
    color: var(--primary-color-900);
    border: 1px solid var(--gray-color-300);
    border-radius: 4px;
    background-color: var(--white-color);
    transition: all 0.2s ease;
    outline: none;
  }

  .input-label {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 16px;
    color: var(--gray-color-600);
    pointer-events: none;
    transition: all 0.2s ease;
    padding: 0 4px;
  }

  .text-input:focus,
  .text-input:not(:placeholder-shown) {
    border-color: var(--primary-color-600);
    padding-top: 20px;
    padding-bottom: 12px;
  }

  .text-input:focus ~ .input-label,
  .text-input:not(:placeholder-shown) ~ .input-label {
    top: 0;
    font-size: 12px;
    color: var(--gray-color-900);
    background-color: var(--white-color);
    transform: translateY(-50%);
  }

  .text-input:hover:not(:focus):not(:invalid) {
    border-color: var(--gray-color-500);
  }

  .text-input:focus {
    border: 1px solid var(--primary-color-600);
    padding: 15px;
    padding-top: 19px;
    padding-bottom: 11px;
  }

  .text-input:invalid:not(:focus):not(:placeholder-shown) {
    border: 1px solid var(--red-color-900);
  }

  .text-input:invalid:not(:focus):not(:placeholder-shown) ~ .input-label {
    color: var(--red-color-900);
  }

  .error-message {
    color: var(--red-color-900);
    font-size: 12px;
    margin-top: 4px;
    display: none;
  }

  .text-input:invalid:not(:focus):not(:placeholder-shown) ~ .error-message {
    display: block;
  }
</style>
