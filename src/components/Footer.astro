---
import Icon from "./Icon.astro";
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <a href="/">SunGroup</a>
      </div>
      <nav class="footer-nav">
        <ul>
          <li><a href="#">O nas</a></li>
          <li><a href="#">Blog</a></li>
          <li><a href="#">Kontakt</a></li>
        </ul>
      </nav>
    </div>
  </div>
  <div class="line"></div>
  <div class="container">
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>&copy; Copyrights 2025 SunGroup</p>
        <a href="#">Polityka prywatno≈õci</a>
        <a href="#">Regulamin</a>
      </div>

      <div class="footer-socials">
        <a href="#" aria-label="Facebook">
          <Icon name="facebook-logo" color="var(--gray-color-900)" />
        </a>
        <a href="#" aria-label="Twitter">
          <Icon name="twitter-logo" color="var(--gray-color-900)" />
        </a>
        <a href="#" aria-label="LinkedIn">
          <Icon name="linkedin-logo" color="var(--gray-color-900)" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .line {
    /* Box Model */
    width: 100%;
    height: 1px;
    margin: 1rem auto;
    /* Visual Styles */
    background-color: var(--gray-color-100);
  }

  .footer {
    /* Box Model & Layout */
    padding: 2rem 0;
    /* Typography */
    font-size: 14px;
    /* Visual Styles */
    color: var(--gray-color-700);
    background-color: var(--gray-color-50);
  }

  .footer-content {
    /* Box Model & Layout */
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
  }

  .footer-logo a {
    /* Typography */
    font-size: 20px;
    font-weight: 600;
    color: var(--gray-color-900);
    text-decoration: none;
  }

  .footer-logo img {
    width: 100px;
  }

  .footer-nav ul {
    /* Box Model & Layout */
    display: flex;
    gap: 20px;
    margin-right: -1rem;
    list-style-type: none;
  }

  .footer-nav a {
    /* Box Model & Layout */
    display: flex;
    padding: 1rem;
    /* Typography */
    text-decoration: none;
    color: var(--gray-color-700);
  }

  .footer-copyright {
    /* Box Model & Layout */
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  .footer-copyright a {
    /* Typography */
    color: var(--gray-color-700);
    text-decoration: none;
  }

  .footer-socials {
    /* Box Model & Layout */
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .footer-socials a {
    /* Box Model & Layout */
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    /* Visual Styles */
    border-radius: 50%;
    background-color: var(--white-color);
    /* Transitions */
    transition: all 0.2s ease;
  }

  .footer-socials a:hover {
    background-color: var(--primary-color-50);
  }

  .footer-socials a:active {
    background-color: var(--primary-color-200);
  }

  .footer-socials a:hover .icon {
    color: var(--primary-color-700) !important;
  }

  .footer-bottom {
    /* Box Model & Layout */
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 24px;
    }

    .footer-nav ul {
      margin-right: 0;
      padding: 0;
      flex-direction: column;
      align-items: center;
      gap: 0;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-copyright {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (min-width: 640px) {
    .footer-socials {
      margin-top: 0;
    }
  }

  @media (min-width: 1024px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }

    .footer-copyright {
      flex-direction: row;
      gap: 2rem;
    }
  }
</style>
